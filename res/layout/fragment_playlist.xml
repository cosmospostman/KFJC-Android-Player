<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/kfjc_transparent_white"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pl_djname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Zero Gravity"/>

    <TextView
        android:id="@+id/pl_timestring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="8dp"
        android:textColor="@color/kfjc_transparent_black"
        android:text="Sunday - 31 January 2016 - 7:00pm to Now"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/playlist_recycler_view"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>