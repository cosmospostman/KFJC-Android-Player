<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/kfjc_transparent_white"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:text="Zero Gravity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="8dp"
        android:textColor="@color/kfjc_transparent_black"
        android:text="Sunday - 31 January 2016 - 7:00pm to Now"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/kfjc_transparent_black"
            android:textSize="12dp"
            android:text="9:35p"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Prince Charming"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="18dp"
            android:text="Beating of Black Wings Beneath The Water Line"/>

    </LinearLayout>


</LinearLayout>