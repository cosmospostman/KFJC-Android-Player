<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/livestream_fragment_layout"
    android:baselineAligned="false"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/radiodevil_10"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/buttonContainer"
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/buttonWell"
            android:background="@color/kfjc_transparent_black"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_anchor="@id/buttonContainer"
            app:layout_anchorGravity="bottom"
            tools:ignore="ContentDescription" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/playstopbutton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            app:layout_anchor="@id/buttonContainer"
            app:layout_anchorGravity="top|end"
            android:src="@drawable/ic_play_arrow_white_48dp"
            app:backgroundTint="@color/kfjc_red_solid"
            app:rippleColor="@color/kfjc_mute"
            app:elevation="2dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="88dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_volume_up_white_48dp"
            app:layout_anchor="@id/buttonWell"
            app:layout_anchorGravity="top|end"
            app:fabSize="mini"
            app:backgroundTint="@color/kfjc_mute"
            app:rippleColor="@color/kfjc_mute"
            app:elevation="2dp"
            />

    </android.support.design.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/currentTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kfjc_transparent_black"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:textSize="16sp" />
</LinearLayout>