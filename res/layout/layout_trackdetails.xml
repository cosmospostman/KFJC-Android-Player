<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:shrinkColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/trackdetails_artist_row"
            style="@style/TrackDetailsRow">
            <TextView
                android:id="@+id/trackdetails_artist"
                android:layout_column="0"
                style="@style/TrackDetailsLabel"
                android:text="@string/trackdetails_artist"/>
            <TextView
                android:id="@+id/trackdetails_artist_value"
                android:layout_column="1"
                android:textStyle="bold"
                style="@style/TrackDetailsValue"/>
        </TableRow>

        <TableRow
            android:id="@+id/trackdetails_track_row"
            style="@style/TrackDetailsRow">
            <TextView
                android:id="@+id/trackdetails_track"
                android:layout_column="0"
                style="@style/TrackDetailsLabel"
                android:text="@string/trackdetails_track"/>
            <TextView
                android:id="@+id/trackdetails_track_value"
                android:layout_column="1"
                style="@style/TrackDetailsValue"/>
        </TableRow>

        <TableRow
            android:id="@+id/trackdetails_album_row"
            style="@style/TrackDetailsRow">
            <TextView
                android:id="@+id/trackdetails_album"
                android:layout_column="0"
                style="@style/TrackDetailsLabel"
                android:text="@string/trackdetails_album"/>
            <TextView
                android:id="@+id/trackdetails_album_value"
                android:layout_column="1"
                style="@style/TrackDetailsValue"/>
        </TableRow>

        <TableRow
            android:id="@+id/trackdetails_label_row"
            style="@style/TrackDetailsRow">
            <TextView
                android:id="@+id/trackdetails_label"
                android:layout_column="0"
                style="@style/TrackDetailsLabel"
                android:text="@string/trackdetails_label"/>
            <TextView
                android:id="@+id/trackdetails_label_value"
                android:layout_column="1"
                style="@style/TrackDetailsValue"/>
        </TableRow>

    </TableLayout>
</LinearLayout>
