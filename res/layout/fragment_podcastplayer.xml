<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/pullDownButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_expand_more_white_48dp"
            app:layout_anchor="@id/buttonWell"
            app:layout_anchorGravity="top|end"
            app:fabSize="mini"
            app:backgroundTint="@color/kfjc_transparent_black"
            app:rippleColor="@color/kfjc_transparent_black"
            app:elevation="0dp"
        />

        <TextView
            android:id="@+id/airName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/kfjc_transparent_black"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:padding="4dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/podcastDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/kfjc_transparent_black"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:padding="4dp"
            android:text="6am Thursday April 14th, 2016"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="92dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/podcastDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/kfjc_transparent_black"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffffff"
            android:padding="4dp"
            android:textSize="14sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:backgroundTint="@color/kfjc_red_solid"
            app:rippleColor="@color/kfjc_mute"
            app:elevation="2dp"/>

    </RelativeLayout>

</LinearLayout>